<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_dark_1</item>
        <item name="colorPrimaryDark">@color/red_dark_2</item>
        <item name="colorAccent">@color/red_dark_1</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/red_light</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/red_dark_2</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="actionMenuTextColor">#FFF</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_condensed</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/red_dark_2</item>
        <item name="tabIndicatorColor">#FFF</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabSelectedTextColor">@color/font_light</item>
    </style>

    <style name="RemarkPreviewTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/grey_semi_transparent</item>
        <item name="tabIndicatorColor">@color/red_dark_1</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/RemarkPreviewTabTextAppearance</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabSelectedTextColor">@color/font_dark</item>
    </style>

    <style name="RemarkPreviewTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:fontFamily">@string/font_normal</item>
        <item name="android:textColor">@color/font_dark_hint</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:fontFamily">@string/font_normal</item>
        <item name="android:textColor">@drawable/selector_material_tab</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ToolTipLayoutCustomStyle">
        <item name="ttlm_padding">25dp</item>
        <item name="ttlm_strokeColor">@color/red_dark_1</item>
        <item name="ttlm_backgroundColor">@color/background_light</item>
        <item name="ttlm_strokeWeight">1dp</item>
        <item name="ttlm_cornerRadius">8dp</item>
    </style>

</resources>
